{
    "env": {
        "node": true,
        "browser": true
    },

    "ecmaFeatures": {
        "jsx": true
    },

    "plugins": [
        "react"
    ],

    "rules": {
        "no-underscore-dangle": 0,
        "global-strict": [2, "always"],
        "quotes": [2, "single"],
        "strict": [2, "global"],

        "consistent-return": 0,

        "no-unused-expressions": 0,

        // Disable certain checks until we have time to fix these issues
        "no-shadow": 0,
        "new-cap": 0
    }
}